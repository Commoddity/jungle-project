<header class="page-header">
  <h1>Admin &raquo; Dashboard</h1>
</header>

<section class ="admin-dash alert alert-success" role="alert">

  <h2>There <%= pluralize_without_count(@categories.count, "is") %> currently <%= pluralize(@categories.count, "category") %> in the database:</h2>
  <span class="categories-menu">
    <%= render 'link', item: 'Categories', url: "admin/categories" %>
    <%= render partial: 'dropdown', locals: { items: @categories } %>
  </span>

  <h2>There <%= pluralize_without_count(@products.count, "is") %> currently <%= pluralize(@products.count, "product") %> in the database:</h2>
  <%= render 'link', item: 'Products', url: "admin/products" %>
  <%= render partial: 'dropdown', locals: { items: @products } %>

  <h2>There <%= pluralize_without_count(@sales.count, "is") %> currently <%= pluralize(@sales.count, "sale") %> in the database:</h2>
  <%= render 'link', item: 'Sales', url: "admin/sales" %>
  <%= render partial: 'dropdown', locals: { items: @sales } %>

</section>

<section class="admin-dashboard-show">

  <h3>Admin &raquo; Categories</h3>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
    <%= link_to 'View Categories', 'admin/categories', class: 'btn btn-primary' %>
    <%= render partial: 'dropdown', locals: { items: @categories } %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Categories</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

  <h3>Admin &raquo; Products</h3>

  <div class="well">
    <%= link_to '+ New Product', [:new, :admin, :product], class: 'btn btn-info' %>
    <%= link_to 'View Products', 'admin/products', class: 'btn btn-primary' %>
    <%= render partial: 'dropdown', locals: { items: @products } %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Category</th>
          <th>Price</th>
          <th>Qty Remaining</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @products %>
      </tbody>
    </table>

  </div>

  <h3>Admin &raquo; Sales</h3>

  <div class="well">
    <%= link_to '+ New Sale', [:new, :admin, :sale], class: 'btn btn-info' %>
    <%= link_to 'View Sales', 'admin/sales', class: 'btn btn-primary' %>
    <%= render partial: 'dropdown', locals: { items: @sales } %>
  </div>

  <div class="panel panel-default sales">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Sales</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
          <th>Percent Off</th>
        </tr>
      </thead>
      <tbody>
        <%= render @sales %>
      </tbody>
    </table>

  </div>

</section>
