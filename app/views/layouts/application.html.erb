<!DOCTYPE html>
<html>
<head>
  <title>Junglist Massive</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src="https://cdn.jsdelivr.net/npm/darkreader/darkreader.min.js"></script>
</head>
<body id="bootstrap-override">

  <%= render 'layouts/top_nav' %>

  <div id="alert">
    <% if notice %>
      <%= notice %>
    <% end %>
	
    <% if alert %>
      <%= alert %>
    <% end %>
  </div>

  <% if active_sale? %>
    <p class="alert alert-info sale-banner">
      There's an active <%= active_sale.name %> going on!
      <strong>Everything is <%= active_sale.percent_off %>% off!</strong>
    </p>
  <% end %>

  <main class="container">
      <%= yield %> 
  </main>

  <%= yield :end_of_body %>
</body>
</html>
